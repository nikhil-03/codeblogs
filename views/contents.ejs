<%- include("header") %>

<div class="content-body">

    <div class="content-topic">
        <h1>
          <%= topic %>
        </h1>
    </div>

    <% found.forEach(function(blogs){ %> 

        <div class="content-main">
           <div>
              <h2 class="content-title"> <%= blogs.title %>  </h2>
           </div>
           <hr>
           <div class="content-content">
               <p> <%= blogs.content %>  </p>
           </div>
           <hr>
           <div class="content-link">  
               <a href="<%=blogs.link%>"><p class="content-url">Link : <%= blogs.link %></p> </a>
           </div>
           <div>
               <a href="https://wa.me/917979047466?text=<%=blogs.topic%>%20<%=blogs._id%>%20Need%20help"><i class="fa fa-whatsapp" aria-hidden="true"></i></a>
           </div>
           <hr>
        </div>
    
    <% }) %> 
</div>    

<%- include("footer") -%> 